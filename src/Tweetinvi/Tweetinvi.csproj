    <VersionPrefix>5.0.4</VersionPrefix>
    <Copyright>Tweetinvi 2020</Copyright>
    <SignAssembly>false</SignAssembly>
    <AssemblyOriginatorKeyFile>../tweetinvi.snk</AssemblyOriginatorKeyFile>
