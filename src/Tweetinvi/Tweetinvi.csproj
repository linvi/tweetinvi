  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Tweetinvi.Controllers\Tweetinvi.Controllers.csproj" />
    <ProjectReference Include="..\Tweetinvi.Credentials\Tweetinvi.Credentials.csproj" />
